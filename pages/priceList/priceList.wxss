/* pages/priceList/priceList.wxss */
.warp {
  width: 100%;
  height: 100%;
  display: flex;
  margin-top: 2%;
}
.list {
  width: 200rpx; 
  height: 100%;
  background: #eeeeee;
}
.style {
  width: 200rpx;
  height: 120rpx;
  line-height: 120rpx;
  padding-left: 20rpx;
  box-sizing: border-box;
}
.content {
  width: 100%;
  line-height: 100%;
  display: flex;
  /* flex-direction: column;
  justify-content: center;
  align-items: center; */
  background: #fcfcfcf2;
 }
.active{
  font-weight: bold;
  background: #fcfcfcf2;
}

.mod-item{
  width:30%;
  height:250rpx;
  float: left;
  margin-left:20rpx;
  margin-top:40rpx;
  position: relative;
 }
 .mod-signup{
   position: absolute;
 }
 .mod-signup image{
   width:76rpx;
   height:42rpx;
 }
 .mod-img{
   width:100%;
   height:180rpx;
 } 
 .mod-image{
   width: 100%;
   height:180rpx;
 }
 .mod-title{
   font-size:20rpx;
   font-family: '微软雅黑';
   display:flex;
   height:60rpx;
   margin-top:15rpx;
   flex-direction:column;
   justify-content: center;
   text-overflow: -o-ellipsis-lastline;
   text-overflow: ellipsis;
   text-align:center;
   overflow: hidden;
 }
 .mod-info{
   display: flex;
   flex-direction: column;
   height:40rpx;
 }
 .mod-icon{
   display: flex;
   flex-direction: row;
   width: 40rpx;
   height: 40rpx;
 }


 .clear{
  display: flex;
  flex-direction: column;
  height:10rpx;
  background: #eeeeee;
}