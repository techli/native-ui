<view class="page" >
  <view class="weui-form" style="margin-top:-112px">
    <view class="weui-form__control-area">
      <view class="weui-cells__group weui-cells__group_form">
        <view class="weui-cells weui-cells_form">
          <view class="weui-cell weui-cell_active">
            <view class="weui-cell__hd"><label class="weui-label">站点</label></view>
            <view class="weui-cell__bd weui-flex">
                李竹园回收站
            </view>
          </view>
          <view class="weui-cell weui-cell_active">
            <view class="weui-cell__hd"><label class="weui-label">联系人</label></view>
            <view class="weui-cell__bd weui-flex">
                <input rules="[{required:true,message: '姓名必填'}]" class="weui-input" maxlength="10" type="text" placeholder="请输入联系人姓名" />
            </view>
          </view>
          <view class="weui-cell weui-cell_active">
            <view class="weui-cell__hd"><label class="weui-label">电话号码</label></view>
            <view class="weui-cell__bd weui-flex">
                <input pattern="[0-9]*" maxlength="11" class="weui-input" bindinput="checkPhone" type="text" placeholder="请输入11位电话号码" />
            </view>
          </view>
            <view wx:if="{{phoneError}}" class="weui-cells__tips weui-cells__tips_warn" style="color:red">必须为11为数字</view>
          <view class="weui-cell weui-cell_active">
            <view class="weui-cell__hd"><label class="weui-label">物品名称</label></view>
            <view class="weui-cell__bd weui-flex">
                <input id="js_current_input" maxlength="32"   class="weui-input" type="text" placeholder="请输入物品名称" />
            </view>
          </view>
          <view class="weui-cell weui-cell_active">
            <view class="weui-cell__hd"><label class="weui-label">物品数量</label></view>
            <view class="weui-cell__bd weui-flex">
                <input id="js_current_input" class="weui-input" type="text" maxlength = "8" placeholder="请输入物品数量" />
            </view>
          </view>
          <view class="weui-cell weui-cell_active">
            <view class="weui-cell__hd"><label class="weui-label">上门地址</label></view>
            <view class="weui-cell__bd weui-flex">
                <input maxlength="32" id="js_current_input" class="weui-input" type="text" placeholder="请输入上门地址" />
            </view>
          </view>
          <view class="weui-cell weui-cell_active">
            <view class="weui-cell__hd"><label class="weui-label">备注</label></view>
            <view class="weui-cell__bd weui-flex">
                <textarea maxlength="128"  class="weui-textarea" placeholder="请输入备注" rows="3"></textarea>
            </view>
          </view>
        </view>
        </view>
        </view>
    <view class="weui-form__opr-area">
      <view class="weui-btn weui-btn_primary">确定</view>
    </view>
  </view>
  <view id="js_toast" style="display: none;">
      <view class="weui-mask_transparent"></view>
      <view class="weui-toast">
          <i class="weui-icon-success-no-circle weui-icon_toast"></i>
          <p class="weui-toast__content">已完成</p>
      </view>
  </view>
</view>